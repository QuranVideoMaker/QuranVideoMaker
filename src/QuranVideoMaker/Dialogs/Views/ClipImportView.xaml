<local:DialogViewBase x:Class="QuranVideoMaker.Dialogs.Views.ClipImportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuranVideoMaker.Dialogs.Views"
        mc:Ignorable="d"
        WindowStyle="None"
        BorderBrush="#FF707070"
        BorderThickness="1"
        Title="Importing Clip..." Height="70" Width="250" SizeToContent="Height">
    <Grid>
        <StackPanel>
            <TextBlock Text="Importing Clip..." Foreground="WhiteSmoke" Margin="5,5,5,0" />
            <ProgressBar Height="10" Margin="5,3,5,5" Minimum="0" Maximum="100" Value="{Binding Progress}" />
            <TextBlock Text="{Binding Elapsed}" Foreground="WhiteSmoke" Margin="5,0,5,5" />
        </StackPanel>
    </Grid>
</local:DialogViewBase>
